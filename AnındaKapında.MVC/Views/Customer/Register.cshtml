@model AnındaKapında.MVC.Models.UserRegisterModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card" style="margin-top: 25px">
    <div class="card-body">
        <form asp-action="Register" asp-controller="Customer" method="post">
            <div class="container mt-3">
                <h5 class="card-title text-center">Register</h5>
                <label class="form-label">Name</label>
                <input class="form-control mb-3" type="text" asp-for="Name" />

                <label class="form-label">Surname</label>
                <input class="form-control mb-3" type="text" asp-for="SurName" />


                <label class="form-label">City</label>
                <input class="form-control mb-3" asp-for="City" />

                <label class="form-label">Email</label>
                <input class="form-control mb-3" asp-for="Email" />

                <label class="form-label">Password</label>
                <input type="password" class="form-control mb-3" asp-for="Password" />

                <button id="addProduct" class="btn btn-outline-success" onclick="confirm('Are u sure?')" type="submit">Register</button>
            </div>
        </form>
    </div>
</div>