@model IEnumerable<AnındaKapında.MVC.Models.OrderLineResponseModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@{
    ViewData["Title"] = "OrderLines";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Ordelines Information</h5>

        <table class="table table-striped">
            <tr>
                <th>#</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>

            </tr>
            @foreach (var item in Model)
            {

                <tr>
                    <td>@item.OrderId</td>
                    <td>@item.ProductName</td>
                    <td> $ @item.Price</td>
                    <td>@item.Quantity </td>
                    <td>$ @(item.Quantity * item.Price)</td>
                </tr>
            }
        </table>
    </div>
</div>

